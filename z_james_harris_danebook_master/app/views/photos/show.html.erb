<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="panel panel-default">
        <%= image_tag @photo.image.expiring_url, class: "img-responsive" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="photo-user">
        <%= image_tag @photo.user.profile.photo.expiring_url, class: "photo-user-photo" %>
        <%= link_to @profile.name, user_profile_path(@profile), class: "photo-user-name" %>
      </div>
    </div>
  </div>
</div>

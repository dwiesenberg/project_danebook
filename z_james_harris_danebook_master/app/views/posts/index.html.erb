<div class="container">
  <%= render 'shared/profile_header_block' %>
  <div class="row">
    <div class="col-sm-4">
      <%= render 'shared/about_box' %>
      <%= render partial:'shared/photos_box', locals: { user: @user } %>
      <%= render partial:'shared/friends_box', locals: { user: @user } %>
    </div>
    <div class="col-sm-8">
      <%= render 'posts/authoring_box' if @user == current_user %>
      <div id="posts">
        <%= render partial: 'posts/show', collection: @posts, as: :post %>
      </div>
    </div>
  </div>
</div>

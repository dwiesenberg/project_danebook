<header class = "container" id="cover">

  <!--cover images-->
  <div class = "row">
    <%= image_tag "hogwarts_small.jpg", class: "cover-photo hidden-sm hidden-xs", width: "100%", height: "350px"  %>
    <div class="col-md-12 hidden-xs hidden-sm profile-image">
      <%= image_tag src="harry_potter_small.jpg", height: "200px", width: "180px" %>
    </div>
  </div>
  
  <!--secondary navbar-->
  <div id = "profile-nav" class = "row">
    <div class = "col-md-7 col-md-offset-3">
      <ul class = "nav nav-tabs " role = "profile-nav">
        <li><%= link_to "Timeline", timeline_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Photos <span class='link-count hidden-xs'>(123)</span>".html_safe, photos_path %></li>
        <li><%= link_to "Friends <span class='link-count hidden-xs'>(542)</span>".html_safe, friends_path %></li>
    </div>
  </div>
</header>